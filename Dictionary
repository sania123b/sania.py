# Creating a dictionary
my_dict = {'apple': 3, 'banana': 6, 'orange': 4}

# Accessing values
print("Number of apples:", my_dict['apple'])

# Adding a new key-value pair
my_dict['grape'] = 5
print("Number of grapes:", my_dict['grape'])

# Modifying an existing value
my_dict['banana'] = 8
print("Number of bananas:", my_dict['banana'])

# Deleting a key-value pair
del my_dict['orange']
print("Updated dictionary after removing 'orange':", my_dict)

# Checking key existence
if 'apple' in my_dict:
    print("Key 'apple' exists")

# Getting keys and values
keys = my_dict.keys()
values = my_dict.values()
print("Keys:", keys)
print("Values:", values)

# Iterating through keys and values
print("Iterating through keys and values:")
for key, value in my_dict.items():
    print(key, "->", value)

# Getting the length of the dictionary
print("Length of the dictionary:", len(my_dict))

# Clearing the dictionary
my_dict.clear()
print("Dictionary after clearing:", my_dict)
